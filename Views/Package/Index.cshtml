@model List<Package>

<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">

    @foreach (var item in Model.ToList())
    {
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm">
                <div class="card-header py-3">
                    <h4 class="my-0 fw-normal">Recommended for @item.Name customers</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title pricing-card-title">@item.Period.ToString()</h1>
                    <h2 class="card-title pricing-card-title"><small class="text-muted fw-light">@item.CurrencyAmount @item.CurrencyName</small></h2>
                    <a asp-controller="Calculate" asp-action="Index" asp-route-id="@item.Id" class="w-100 btn btn-lg btn-outline-primary">Edit</a>
                </div>
            </div>
        </div>

    }
</div>
